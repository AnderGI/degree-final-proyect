{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest", "node", "@testing-library/jest-dom"
    ],
    "esModuleInterop": true, // 2
    "emitDecoratorMetadata": true // 3
  },
